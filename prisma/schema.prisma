// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://postgres:postgres@localhost:5432/database"
}

model User {
  id       String @id @default(uuid())
  username String @unique
  password String
}

model Accounts {
  id      String  @id @default(uuid())
  balance Decimal
}

model Transactions {
  id                String   @id @default(uuid())
  debitedAccountId  Decimal
  creditedAccountId Decimal
  value             Decimal
  createdAt         DateTime @default(now())
}
